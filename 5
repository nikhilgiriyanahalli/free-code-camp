import pandas as pd
import matplotlib.pyplot as plt
from scipy.stats import linregress

# Use Pandas to import the data from epa-sea-level.csv
data = pd.read_csv('epa-sea-level.csv')

# Use matplotlib to create a scatter plot
plt.figure(figsize=(10, 6))
plt.scatter(data['Year'], data['CSIRO Adjusted Sea Level'], label='Original Data')

# Use the linregress function to get the slope and y-intercept of the line of best fit
slope, intercept, _, _, _ = linregress(data['Year'], data['CSIRO Adjusted Sea Level'])

# Plot the line of best fit through the year 2050
plt.plot(range(1880, 2051), slope * range(1880, 2051) + intercept, color='red', label='Best Fit Line')

# Plot a new line of best fit using the data from year 2000 through the most recent year in the dataset
recent_data = data[data['Year'] >= 2000]
slope_recent, intercept_recent, _, _, _ = linregress(recent_data['Year'], recent_data['CSIRO Adjusted Sea Level'])
plt.plot(range(2000, 2051), slope_recent * range(2000, 2051) + intercept_recent, color='green', label='Best Fit Line Since 2000')

# Set labels and title
plt.xlabel('Year')
plt.ylabel('Sea Level (inches)')
plt.title('Rise in Sea Level')

# Add legend
plt.legend()

# Save and return the image
plt.savefig('sea_level_plot.png')
plt.show()
